@model List<string>

@{
    ViewBag.Title = "首页";
    Layout = "~/Areas/Web/Views/Shared/_Layout.cshtml";
}


<div class="wrap">

	<div id="tags">
		<ul>
            @for (int i = 0; i < Model.Count; i++)
            {
                <li>@Html.ActionLink(Model[i], "Tag", "Article", new { id = Model[i]}, null)</li>
            }
		</ul>
	</div>

    <div class="column" style="display: none;">
        <div>这也算书法</div>
        <div>无病呻吟</div>
        <div>整理&备忘</div>
        <div>HMM</div>
        <div>CRF</div>
        <div>MEM</div>
        <div>ACM那些事</div>
        <div>Todo List</div>

    </div>
</div>




@section Scripts{
    <link href="~/Areas/Web/css/home.css" rel="stylesheet" />
    <script src="~/Areas/Web/js/jquery.3DTagCloud.js"></script>
    <script src="~/Areas/Web/js/jquery.mousewheel.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#tags').tagCloud({ randomColor: true, speed: 15, radius: 180, hoverStop: true });
        
            $('.main').height($(window).height() - 100);
            $(window).resize(function () {
                $('.main').height($(window).height() - 100);
            });
        });
    </script>
}