@model xianmau.me.Models.Writing

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Create Writing</h2>

<p>
    <a href="@Url.Action("Index")"><img src="~/Areas/Admin/img/icon_back.png" style="width:14px;height:14px;vertical-align:middle;" /></a>
</p>

@using (Html.BeginForm("Create", "Writing", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Archives)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Archives)
            @Html.ValidationMessageFor(model => model.Archives)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Url)
        </div>
        <div class="editor-field">
            <input name="Url" id="Url" type="file" />
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Status)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Status)
            @Html.ValidationMessageFor(model => model.Status)
        </div>

        <div class="editor-submit">
            <input type="submit" value="Create" />
        </div>
    </fieldset>
}
@section Scripts {
    <link href="~/Areas/Admin/css/main.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/jquery")
