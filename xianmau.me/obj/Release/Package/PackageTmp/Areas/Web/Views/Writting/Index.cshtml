@model List<xianmau.me.Models.Writing>

@{
    ViewBag.Title = "关于";
    Layout = "~/Areas/Web/Views/Shared/_LayoutSimply.cshtml";
}

<div class="wrap">
    <h1>书法展</h1>
    <div id="container"></div>
    <div id="urls" style="display:none;">
        [
        @for(int i = 0; i < Model.Count; i ++)
        {
            @Html.Raw(string.Format("{{url:\"{0}\",title:\"{1}\"}},", UrlHelper.GenerateContentUrl(Model[i].Url, this.Context).ToString(), Model[i].Title));
        }
        ]
    </div>

</div>

@section Scripts{
    <link href="~/Areas/Web/css/writting.css" rel="stylesheet" />
    <script src="~/Areas/Web/js/jquery.waterfall.js"></script>

    <script>
        $(function () {
            $("#container").waterFall({ columnWidth:300, urls: eval($("#urls").html()) });
        });
    </script>
}
