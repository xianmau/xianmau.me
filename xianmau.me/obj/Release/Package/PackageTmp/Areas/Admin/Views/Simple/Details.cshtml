@model xianmau.me.Models.Simple

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Simple Page Details</h2>

<p>
    <a href="@Url.Action("Index")"><img src="~/Areas/Admin/img/icon_back.png" style="width:14px;height:14px;vertical-align:middle;" /></a>
</p>

<div class="simple">
    <h1>@Html.Raw(Model.Title)</h1>
    <div class="content">@Html.Raw(Model.Content)</div>
</div>

<p>
    Id: @Html.Raw(Model.Id) | @Html.ActionLink("Edit", "Edit", new { id=Model.Id })
</p>


@section Scripts {
    <link href="~/Areas/Admin/css/main.css" rel="stylesheet" />
    <style>
        .simple {
            outline:1px solid #f0f0f0;
            padding: 10px;
        }
            .simple h1 {
                font-size: 18px;
                font-weight: bold;
            }
            .simple .content {
                margin-top: 10px;
                padding-top:10px;
                line-height: 25px;
                border-top: 1px dashed #e0e0e0;
            }
    </style>
}
